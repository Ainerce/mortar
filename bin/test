#!/bin/sh

# assumes execution from the top-level dir
TOP=.
BINDIR=${TOP}/bin

if [ -z "$1" ]; then
  echo "Usage: $0 <template-name>"
  exit
fi

tmplName="$1"

# force clean builds
rm -fr built
mkdir built

./build "$tmplName" $TOP/built/$tmplName >/dev/null

diff -uwr $TOP/ref/$tmplName $TOP/built/$tmplName
diffExit=$?

if [ "$diffExit" -eq 0 ]; then
  echo "tests passed"
else 
  echo "tests failed!"
fi

exit $diffExit
